# 🇨🇺 PACKFY CUBA - Variables de Entorno de Desarrollo v4.0
# IMPORTANTE: Este archivo es solo para desarrollo local
# NUNCA subir este archivo al repositorio con datos reales

# 🔧 CONFIGURACIÓN DEL SISTEMA
DJANGO_SETTINGS_MODULE=config.settings_development
ENVIRONMENT=development

# 🔒 SEGURIDAD
DJANGO_SECRET_KEY=django-insecure-dev-key-v4-glassmorphism-2025
DJANGO_DEBUG=true

# 🌐 HOSTS Y DOMINIOS
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://localhost:5173,http://127.0.0.1:5173,https://127.0.0.1:5173

# 🗄️ BASE DE DATOS
POSTGRES_DB=packfy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=database
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@database:5432/packfy

# 📧 EMAIL (Desarrollo - Console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# 🔧 CONFIGURACIONES ESPECÍFICAS
INTERFACE_VERSION=4.0
FORM_STYLE=cuban-unified
SUBSCRIPTION_MODE=disabled
FEATURE_UNIFIED_MANAGEMENT=enabled

# 🔐 SSL/TLS
USE_HTTPS=true
SECURE_SSL_REDIRECT=false
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# 📊 CACHE
CACHE_BACKEND=locmem
CACHE_LOCATION=packfy-dev-cache

# 🐛 DEBUG
DJANGO_LOG_LEVEL=DEBUG
PACKFY_LOG_LEVEL=DEBUG

# 🚀 PERFORMANCE
DJANGO_CONN_MAX_AGE=60
DJANGO_USE_TZ=true
